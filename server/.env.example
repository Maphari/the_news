# Server Configuration
PORT=8080
DEFAULT_PORT=0.0.0.0

# Security
JWT_SECRET=your_jwt_secret_key_here_minimum_64_characters_long

# OAuth Configuration
GOOGLE_CLIENT_ID=your_google_oauth_client_id
APPLE_CLIENT_ID=your_apple_client_id

# Firebase Configuration
FIREBASE_DB_URL=https://your-project.firebaseio.com

# Payment Gateway
PAYSTACK_SECRET_KEY=your_paystack_secret_key_here

# Email Configuration (for notifications)
GOOGLE_APP_EMAIL=your_email@gmail.com
GOOGLE_APP_PASSWORD=your_app_password_here
GOOGLE_APP_HOST=smtp.gmail.com
GOOGLE_APP_PORT=465

# AI Proxy (server-side)
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4o-mini

# Podchaser API (Recommended - https://features.podchaser.com/api/)
PODCHASER_CLIENT_ID=your_podchaser_client_id
PODCHASER_CLIENT_SECRET=your_podchaser_client_secret
PODCHASER_SCOPES=public
# Optional: Use a static access token instead of client credentials
PODCHASER_ACCESS_TOKEN=

# Optional: protect the podcast cleanup endpoint
# If set, call POST /api/v1/podcasts/cleanup with header x-admin-key
PODCAST_CLEANUP_KEY=

# Podcast background sync scheduler
PODCAST_BACKGROUND_SYNC_ENABLED=true
PODCAST_BACKGROUND_SYNC_INTERVAL_MINUTES=30
PODCAST_BACKGROUND_SYNC_LIMIT_PER_CATEGORY=12

# Redis cache (optional but recommended)
# Example: redis://127.0.0.1:6379
REDIS_URL=
REDIS_KEY_PREFIX=the_news

# Note: Also create server/src/firebase_service.json with your Firebase credentials
# Download from Firebase Console > Project Settings > Service Accounts
